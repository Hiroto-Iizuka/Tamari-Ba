<div class="container mx-auto my-5">
  <h2 class="text-center mb-5">ログイン</h2>

  <div class="text-center">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field my-5 login-form">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
        </div>
      

        <div class="field my-5">
          <div class="d-inline-flex">
            <%= f.label :password, class: "text-left" %>
          </div><br>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード" %>
          <br>
          <%= link_to "パスワードを忘れた場合", new_user_password_path, class: "forgot-link" %>

        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-outline-primary login-btn" %>
        </div>
    <% end %>
    </div>
    <div class="text-center">
      <%= link_to "アカウントを作成", new_user_registration_path %>
    </div>

    <div class="text-center mt-3">
      <%= link_to "ゲストログイン(採用担当者様)", users_guest_sign_in_path, method: :post, class: "btn btn-outline-primary login-btn" %>
    </div>

  </div>
</div>
